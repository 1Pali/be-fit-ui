<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
>
    <Dialog
            id="CreateIngredientDialog"
            title="{i18n>cidTitle}"
            class="sapUiContentPadding"
            initialFocus="cidCreateButton"
            afterClose="onAfterClose"
    >
        <content>
            <VBox>
                <Label
                        text="{i18n>cidName}"
                        labelFor="cidName"
                />
                <Input
                        id="cidName"
                        liveChange="onFieldChange"
                        value="{dialog>/data/name}"
                        required="true"
                />
            </VBox>

            <VBox>
                <Label
                        text="{i18n>cidEnergy}"
                        labelFor="cidEnergy"
                />
                <Input
                        id="cidEnergy"
                        liveChange="onFieldChange"
                        value="{dialog>/data/energy}"
                        required="true"
                />
            </VBox>

            <VBox>
                <Label
                        text="{i18n>cidProtein}"
                        labelFor="cidProtein"
                />
                <Input
                        id="cidProtein"
                        liveChange="onFieldChange"
                        value="{dialog>/data/protein}"
                        required="true"
                />
            </VBox>

            <VBox>
                <Label
                        text="{i18n>cidCarbohydrate}"
                        labelFor="cidCarbohydrate"
                />
                <Input
                        id="cidCarbohydrate"
                        liveChange="onFieldChange"
                        value="{dialog>/data/carbohydrate}"
                        required="true"
                />
            </VBox>

            <VBox>
                <Label
                        text="{i18n>cidFat}"
                        labelFor="cidFat"
                />
                <Input
                        id="cidFat"
                        liveChange="onFieldChange"
                        value="{dialog>/data/fat}"
                        required="true"
                />
            </VBox>

            <VBox>
                <Label
                        text="{i18n>cidFiber}"
                        labelFor="cidFiber"
                />
                <Input
                        id="cidFiber"
                        liveChange="onFieldChange"
                        value="{dialog>/data/fiber}"
                        required="true"
                />
            </VBox>

            <VBox>
                <Label
                        text="{i18n>cidPrice}"
                        labelFor="cidPrice"
                />
                <Input
                        id="cidPrice"
                        liveChange="onFieldChange"
                        value="{dialog>/data/price}"
                        required="true"
                />
            </VBox>

            <VBox>
                <Label
                        text="{i18n>cidDescription}"
                        labelFor="cidDescription"
                />
                <TextArea
                        width="100%"
                        valueLiveUpdate="true"
                        value="{dialog>/data/description}"
                        growing="true"
                />
            </VBox>
        </content>
        <beginButton>
            <Button
                    id="cidCreateButton"
                    enabled="{dialog>/enableConfirmButton}"
                    text="{i18n>cidCreateButton}"
                    press="onCreatePress"
            />
        </beginButton>
        <endButton>
            <Button
                    id="cidCancelButton"
                    text="{i18n>cidCancelButton}"
                    press="onCancelPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
