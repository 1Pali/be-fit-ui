<mvc:View
      xmlns:core="sap.ui.core"
      xmlns:mvc="sap.ui.core.mvc"
      xmlns="sap.m"
      controllerName="pc.my.be-fit.src.master.ingredients.components.ingredientTable.IngredientTable"
>
    <Table
       id="idRecipesTable"
       inset="false"
       items="{
            path: 'data>/recipes',
            sorter: {
                path: 'name'
            }
       }"
    >
        <headerToolbar>
            <core:Fragment
                fragmentName="pc.my.be-fit.src.master.recipes.components.recipeTable.fragments.HeaderToolBar"
                type="XML"
            />
        </headerToolbar>

        <columns>
            <core:Fragment
                fragmentName="pc.my.be-fit.src.master.recipes.components.recipeTable.fragments.TableColumns"
                type="XML"
            />
        </columns>
        <items>
            <ColumnListItem
                type="Navigation"
                press=".onTableListItemPress"
            >
                <cells>
                    <core:Fragment
                        fragmentName="pc.my.be-fit..src.master.recipes.components.recipeTable.fragments.TableCells"
                        type="XML"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
