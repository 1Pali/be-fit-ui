<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
		  xmlns="sap.m" xmlns:commons="sap.suite.ui.commons" xmlns:l="sap.ui.layout"
		  xmlns:html="http://www.w3.org/1999/xhtml"
		  xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
		  xmlns:f="sap.f" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
		  xmlns:viz.data="sap.viz.ui5.data" xmlns:chart="sap.suite.ui.microchart"
		  controllerName="pc.my.be-fit.src.master.recipes.MasterRecipes">
	<f:DynamicPage id="overviewPage" class="overviewPage">
		<f:content>
			<l:BlockLayout class="overviewPageBlockLayout"
						   background="Transparent"
			>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell width="100%"
									   class="overviewPageBlockLayoutCell"
					>
						<Title
								level="H1" text="{i18n>RECIPES}" class="sapUiSmallMarginEnd"
						/>
						<Table id="idRecipesTable"
							   inset="false"
							   items="{
                                    path: 'data>/recipes',
                                    sorter: {
                                        path: 'name'
                                    }
                                }"
						>
							<headerToolbar>
								<OverflowToolbar>
									<content>
										<ToolbarSpacer/>
										<Button
												text="Add"
										/>
										<Button
												text="Remove"
										/>
									</content>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column>
									<Text
											text="Name"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Energy"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Protein"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Carbohydrate"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Fat"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Fiber"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Portions"
									/>
								</Column>
							</columns>
							<items>
								<ColumnListItem
										type="Navigation"
										press=".onTableListItemPress"
								>
									<cells>
										<ObjectIdentifier
												title="{data>name}"
										/>
										<Text
												text="{data>portionEnergy}"
										/>
										<Text
												text="{data>portionProtein}"
										/>
										<Text
												text="{data>portionCarbohydrate}"
										/>
										<Text
												text="{data>portionFat}"
										/>
										<Text
												text="{data>portionFiber}"
										/>
										<Text
												text="{data>portions}"
										/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
		</f:content>
	</f:DynamicPage>
</mvc:View>