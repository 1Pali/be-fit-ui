<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
>
    <Button
        text="{i18n>EditRecipeButton}"
        tooltip="{i18n>EditRecipeButtonToolTip}"
        visible="{= ${ui>/editMode} === false}"
        type="Emphasized"
        press=".onEditPress"
    />

    <Button
        text="{i18n>DeleteRecipeButton}"
        tooltip="{i18n>DeleteRecipeButtonToolTip}"
        type="Transparent"
        press=".onDeletePress"
    />
</core:FragmentDefinition>
