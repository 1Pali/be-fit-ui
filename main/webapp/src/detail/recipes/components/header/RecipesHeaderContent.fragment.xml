<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:layout="sap.ui.layout"
>
    <FlexBox
        wrap="Wrap"
        fitContainer="true"
        alignItems="Center"
    >
        <FlexBox
            visible="{= ${ui>/editMode} === false}"
            wrap="NoWrap"
            fitContainer="true"
            alignItems="Stretch"
            class="sapUiTinyMarginEnd"
        >
            <VBox
                class="sapUiMediumMarginEnd"
            >
                <layout:VerticalLayout>
                    <ObjectStatus
                            title="{i18n>rhcPortionEnergy}"
                            text="{data>energy}"
                            class="sapUiTinyMarginBottom"
                    />
                    <ObjectStatus
                            title="{i18n>rhcPortionProtein}"
                            text="{data>protein}"
                            class="sapUiTinyMarginBottom"
                    />
                    <ObjectStatus
                            title="{i18n>rhcPortionCarbohydrate}"
                            text="{data>carbohydrate}"
                            class="sapUiTinyMarginBottom"
                    />
                    <ObjectStatus
                            title="{i18n>rhcPortionFat}"
                            text="{data>fat}"
                            class="sapUiTinyMarginBottom"
                    />
                </layout:VerticalLayout>
            </VBox>

            <VBox
                class="sapUiMediumMarginEnd"
            >
                <layout:VerticalLayout>
                    <ObjectStatus
                            title="{i18n>rhcPortionFiber}"
                            text="{data>fiber}"
                            class="sapUiTinyMarginBottom"
                    />
                    <ObjectStatus
                            title="{i18n>rhcTotalPrice}"
                            text="{data>price}"
                            class="sapUiTinyMarginBottom"
                    />
                    <ObjectStatus
                            title="{i18n>rhcPortions}"
                            text="{data>price}"
                            class="sapUiTinyMarginBottom"
                    />
                </layout:VerticalLayout>
            </VBox>
        </FlexBox>
    </FlexBox>
</core:FragmentDefinition>
