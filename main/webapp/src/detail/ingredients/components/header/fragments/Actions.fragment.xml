<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
>
    <Button
        text="{i18n>EditIngredientButton}"
        tooltip="{i18n>EditIngredientButtonToolTip}"
        visible="{= ${ui>/editMode} === false}"
        type="Emphasized"
        press=".onEditPress"
    />

    <Button
        text="{i18n>RemoveIngredientButton}"
        tooltip="{i18n>RemoveIngredientButtonToolTip}"
        type="Transparent"
        press=".onDeletePress"
    />
</core:FragmentDefinition>
