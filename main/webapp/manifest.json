{
	"_version": "1.0.0",
	"sap.app": {
		"id": "pc.my.be-fit",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{MAIN_TITLE}}"
	},
	"sap.ui": {
		"technology": "UI5",
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": false
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_bluecrystal",
			"sap_belize"
		],
		"fullWidth": true
	},
	"sap.ui5": {
		"rootView": {
			"viewName": "pc.my.be-fit.view.Standalone",
			"type": "XML",
			"async": true
		},
		"config": {
			"defaultView": "pc.my.be-fit.view.Standalone"
		},
		"dependencies": {
			"minUI5Version": "1.54.3",
			"libs": {
				"sap.ui.core": {
					
				},
				"sap.m": {
					
				},
				"sap.ui.layout": {
					
				},
				"sap.f": {

				}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "pc.my.be-fit.i18n.i18n"
				}
			}
		},
		"resources": {
			"css": [
				{
					"uri": "style/style.css"
				}
			],
			"img": [
				{
					"uri": "images/logo.png"
				},
				{
					"uri": "images/logo_small.png"
				}
			]
		},
		"routing": {
			"config": {
				"routerClass": "sap.f.routing.Router",
				"viewType": "XML",
				"viewPath": "pc.my.be-fit.view",
				"controlId": "flexibleColumnLayout",
				"transition": "slide",
				"async": true
			},
			"routes": [
				{
					"pattern": "ingredient/:layout:",
					"name": "MasterIngredients",
					"target": [
						"MasterIngredients",
						"DetailIngredients"
					]
				},
				{
					"pattern": "ingredientDetail/{ingredient}/{layout}",
					"name": "DetailIngredients",
					"target": [
						"MasterIngredients",
						"DetailIngredients"
					]
				},
				{
					"pattern": "recipe/:layout:",
					"name": "MasterRecipes",
					"target": [
						"MasterRecipes",
						"DetailRecipes"
					]
				},
				{
					"pattern": "recipeDetail/{recipe}/{layout}",
					"name": "DetailRecipes",
					"target": [
						"MasterRecipes",
						"DetailRecipes"
					]
				},
				{
					"pattern": "dailyFoodPlanning/:layout:",
					"name": "MasterDailyFoodPlanning",
					"target": [
						"MasterDailyFoodPlanning",
						"DetailDailyFoodPlanning"
					]
				},
				{
					"pattern": "dailyFoodPlanningDetail/{dailyFoodPlanning}/{layout}",
					"name": "DetailDailyFoodPlanning",
					"target": [
						"MasterDailyFoodPlanning",
						"DetailDailyFoodPlanning"
					]
				}
			],
			"targets": {
				"MasterIngredients": {
					"viewName": "MasterIngredients",
					"controlAggregation": "beginColumnPages"
				},
				"DetailIngredients": {
					"viewName": "DetailIngredients",
					"controlAggregation": "midColumnPages"
				},
				"MasterRecipes": {
					"viewName": "MasterRecipes",
					"controlAggregation": "beginColumnPages"
				},
				"DetailRecipes": {
					"viewName": "DetailRecipes",
					"controlAggregation": "midColumnPages"
				},
				"MasterDailyFoodPlanning": {
					"viewName": "MasterDailyFoodPlanning",
					"controlAggregation": "beginColumnPages"
				},
				"DetailDailyFoodPlanning": {
					"viewName": "DetailDailyFoodPlanning",
					"controlAggregation": "midColumnPages"
				}
			}
		}
	}
}