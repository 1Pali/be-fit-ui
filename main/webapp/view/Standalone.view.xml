<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:tnt="sap.tnt"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	controllerName="techEd2018NetworkGraph.controller.Standalone" id="standaloneView">
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button class="expandNav" id="sideExpanded" type="Transparent"
					icon="sap-icon://menu2" press="onToggleSideNavigation" activeIcon="sap-icon://menu2" />
				<Image src="./images/logo_small.png" />
				<ToolbarSpacer />
				<Text text="{i18n>MAIN_TITLE}" wrapping="false">
					<layoutData>
						<OverflowToolbarLayoutData priority="Disappear" />
					</layoutData>
				</Text>
				<ToolbarSpacer />
				<Button text="{i18n>USER_LABEL}" icon="sap-icon://slim-arrow-down"
					type="Transparent" iconFirst="false" press="">
				</Button>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation id="sideNavigation">
				<tnt:item>
					<tnt:NavigationList expanded="true" itemSelect="">
						<tnt:NavigationListItem icon="sap-icon://product" text="{i18n>GO_TO_OV}" select="goToOverview"/>
						<tnt:NavigationListItem icon="sap-icon://overview-chart" text="{i18n>GO_TO_TL}" select="goToTransportLandscape"/>
						<tnt:NavigationListItem icon="sap-icon://activate" text="{i18n>OVERVIEW_LANDSCAPE_WIZARD}"/>
						<tnt:NavigationListItem icon="sap-icon://share-2" text="{i18n>GO_TO_TRN}"/>
						<tnt:NavigationListItem icon="sap-icon://shipping-status" text="{i18n>GO_TO_TRR}"/>
						<tnt:NavigationListItem icon="sap-icon://documents" text="{i18n>GO_TO_AL}"/>
						<tnt:NavigationListItem icon="sap-icon://activities" text="{i18n>GO_TO_LA}"/>
						<tnt:NavigationListItem icon="sap-icon://sys-help" text="{i18n>GO_TO_HELP}"/>
					</tnt:NavigationList>
				</tnt:item>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="app" height="100%" />
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
