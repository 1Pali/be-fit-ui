<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified"
	xmlns:l="sap.ui.layout"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	id="createRouteFragment">
	<Dialog id="createRouteDialog" title="{i18n>CREATE_ROUTE}" resizable="false" afterOpen="afterCreateRouteDialogOpen">
		<content>
			<FlexBox direction="Column" height="auto" alignItems="Stretch"
				class="sapUiMediumMargin">
				<items>
					<Label text="{i18n>ROUTE_NAME}" class="sapUiSmallMarginTop" required="true"/>
					<Input id="createRouteName" maxLength="30"
						placeholder="{i18n>ROUTE_NAME_HINT}" class="createRouteName"/>
					<Label text="{i18n>DESCRIPTION_LABEL}" class="sapUiSmallMarginTop"/>
					<TextArea id="createRouteDescription" width="100%"
						maxLength="512" placeholder="{i18n>ROUTE_DESCRIPTION_HINT}" class="createRouteDescription"/>
					<Label text="{i18n>ROUTE_SOURCE_NODE}" class="sapUiSmallMarginTop" required="true"/>
					<Select id="sourceNode" forceSelection="false"
						class="sapUiMediumMarginBottom createRouteSourceNode"
						width="100%" items="{ path: 'availableSources>/', sorter: { path: 'name' }}" change="onSourceTargetSelect">
						<core:Item key="{availableSources>id}" text="{availableSources>name} ({availableSources>description})" />
					</Select>
					<Label text="{i18n>ROUTE_TARGET_NODE}" class="sapUiSmallMarginTop" required="true"/>
					<Select id="targetNode" forceSelection="false"
						class="sapUiMediumMarginBottom createRouteTargetNode"
						width="100%" items="{ path: 'availableTargets>/', sorter: { path: 'name' }}" change="onSourceTargetSelect">
						<core:Item key="{availableTargets>id}" text="{availableTargets>name} ({availableTargets>description})" />
					</Select>
				</items>
			</FlexBox>
		</content>
		<buttons>
			<Button id="createRouteGoBtn" press="onAddRoute" text="{i18n>OK_LABEL}" class="createRouteGoBtn"/>
			<Button press="onAddRouteClosePress" text="{i18n>CANCEL}" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>
