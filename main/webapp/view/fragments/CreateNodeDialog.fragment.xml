<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" id="createNodeDialogFragment">
	<Dialog id="createNodeDialog" title="{i18n>CREATE_NODE}" resizable="false">
		<content>
			<FlexBox direction="Column" height="auto" alignItems="Stretch" class="sapUiMediumMargin">
				<items>
					<Label text="{i18n>NODE_NAME}" class="sapUiSmallMarginTop" required="true"/>
					<Input id="nodeName" maxLength="30" placeholder="{i18n>NODE_NAME_HINT}" class="createNodeName"/>
					<Label text="{i18n>DESCRIPTION_LABEL}" class="sapUiSmallMarginTop"/>
					<TextArea id="nodeDescription" width="100%" maxLength="512" class="sapUiSmallMarginBottom createNodeDescription" placeholder="{i18n>NODE_DESCRIPTION_HINT}"/>		
					<Label id="nodeTargetRoleLabel" text="{i18n>ROLE_LABEL}" class="sapUiSmallMarginTop"/>
					<Select id="nodeTargetRole" forceSelection="false" width="100%">
						<core:Item key="Dev" text="Development"/>
						<core:Item key="Test" text="Test"/>
						<core:Item key="Prod" text="Production"/>
						<core:Item key="Sandbox" text="Sandbox"/>
						<core:Item key="Quality" text="Quality"/>
					</Select>
					<CheckBox id="allowUploadCheckbox" text="{i18n>ALLOW_UPLOAD_TITLE}"/>
					<Label id="nodeTargetCTLabel" text="{i18n>TARGET_CONTENT_TYPE}" class="sapUiSmallMarginTop"/>
					<Select id="nodeTargetCT" forceSelection="false" width="100%" class="createDeployTargetContentType">
						<core:Item key="MTA" text="{i18n>MULTI_TARGET_LABEL}"/>
						<core:Item key="XSCDU" text="{i18n>XSC_DU_LABEL}"/>
						<core:Item key="APP" text="{i18n>APP_LABEL}"/>
					</Select>
					<Label id="nodeDestIDTargetLabel" text="{i18n>TARGET_DESTINATION}" class="sapUiSmallMarginTop"/>
					<Select	id="nodeDestIDTarget" forceSelection= "false" class="sapUiSmallMarginBottom createDeployTargetDestination" width="100%">
						<core:Item key="SAPCP" text="SAP Cloud Platform" />
						<core:Item key="dest2" text="Destination 2" />
						<core:Item key="dest3" text="Destination 3" />
					</Select>
					<Text text="{i18n>DESTINATION_INFO}" class="sapUiSmallMarginBottom" width="300px" id="destinationsInfoText"/>		
				</items>
			</FlexBox>
		</content>
		<buttons>
			<Button id="createNodeGoBtn" press="onCreateNode" text="{i18n>OK_LABEL}" class="createNodeGoBtn"/>
			<Button press="onCreateNodeDialogClosePress" text="{i18n>CANCEL}"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>