<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
		  xmlns="sap.m" xmlns:commons="sap.suite.ui.commons" xmlns:l="sap.ui.layout"
		  xmlns:html="http://www.w3.org/1999/xhtml"
		  xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
		  xmlns:f="sap.f" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
		  xmlns:viz.data="sap.viz.ui5.data" xmlns:chart="sap.suite.ui.microchart"
		  controllerName="techEd2018NetworkGraph.controller.Overview">
	<f:DynamicPage id="overviewPage" class="overviewPage">
		<f:content>
			<l:BlockLayout class="overviewPageBlockLayout"
						   background="Transparent">
				<l:BlockLayoutRow>
					<l:BlockLayoutCell width="100%" height="100%"
									   class="overviewPagePictureBlockLayoutCell" />
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell width="100%"
									   class="overviewPageBlockLayoutCell">
						<Title level="H1" text="{i18n>OVERVIEW_TRANSPORT_MANAGEMENT}" class="sapUiSmallMarginEnd"/>
						<core:Icon id="transportManagementIcon" src="sap-icon://sys-help-2" color="rgba(66,124,172,0.8)"
								   class="titleSmallIcon" press="onTransportManagementIconPress"/>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell title="{i18n>RECIPES}"
									   width="50%" class="overviewColorBlue chartBlock">
						<FlexBox direction="Column" backgroundDesign="Transparent"
								 width="inherit" alignItems="Center" justifyContent="SpaceBetween"
								 wrap="Wrap">
							<items>
								<chart:InteractiveDonutChart id="monitorImportsChart"
															 displayedSegments="4" class="monitorImportsChart">
									<chart:segments>
										<chart:InteractiveDonutChartSegment
												label="Succeeded" value="80"
												displayedValue="80%"
												color="Good"/>
										<chart:InteractiveDonutChartSegment
												label="Running" value="15"
												displayedValue="15%" color="Critical"/>
										<chart:InteractiveDonutChartSegment
												label="Error" value="2"
												displayedValue="2%" color="Error"/>
										<chart:InteractiveDonutChartSegment
												label="Fatal" value="3"
												displayedValue="3%" color="Error"/>
									</chart:segments>
								</chart:InteractiveDonutChart>
								<RadioButtonGroup columns="4" id="timeFilterBtns">
									<buttons>
										<RadioButton id="AllButton"
													 text="{i18n>OVERVIEW_TRANSPORT_MONITOR_ALL}"/>
										<RadioButton id="24HoursButton"
													 text="{i18n>OVERVIEW_TRANSPORT_MONITOR_24HRS}"/>
										<RadioButton id="7DaysButton"
													 text="{i18n>OVERVIEW_TRANSPORT_MONITOR_7DAYS}"/>
										<RadioButton id="30DaysButton"
													 text="{i18n>OVERVIEW_TRANSPORT_MONITOR_30DAYS}"/>
									</buttons>
								</RadioButtonGroup>
							</items>
						</FlexBox>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell width="50%"
									   title="{i18n>OVERVIEW_TRANSPORT_EXECUTE}" class="overviewColorLightBlue top5ImportQueues">
						<Table id="top5ImportQueues">
							<headerToolbar>
								<OverflowToolbar>
									<ToolbarSpacer />
									<layoutData>
										<OverflowToolbarLayoutData minWidth="200px" />
									</layoutData>
									<Button text="Show more" tooltip="{i18n>TT_NODES_SHOW_MORE}"/>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column hAlign="Left">
									<Text text="{i18n>NODE_NAME_LABEL}" />
								</Column>
								<Column hAlign="Left">
									<Text text="{i18n>DESCRIPTION_LABEL}" />
								</Column>
								<Column hAlign="End">
									<FlexBox alignContent="End" alignItems="End"
											 justifyContent="End">
										<Text text="{i18n>OVERVIEW_WAITING_TRANSPORTS}" class="sapUiSmallMarginEnd" />
										<core:Icon src="sap-icon://sys-help-2" color="rgba(66,124,172,0.8)"/>
									</FlexBox>
								</Column>
							</columns>
							<items>
								<ColumnListItem type="Navigation">
									<cells>
										<Text text="TEST_CLM" />
										<Text text="Test Node for CLM" />
										<Text text="20" />
									</cells>
								</ColumnListItem>
								<ColumnListItem type="Navigation">
									<cells>
										<Text text="PREPROD_CLM" />
										<Text text="Pre-Productive Node for CLM" />
										<Text text="20" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell width="100%"
									   class="overviewPageBlockLayoutCell">
						<Title level="H1" text="{i18n>OVERVIEW_LANDSCAPE_MANAGEMENT}" class="sapUiSmallMarginEnd"/>
						<core:Icon src="sap-icon://sys-help-2" color="rgba(66,124,172,0.8)"
								   class="titleSmallIcon" press=""/>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell width="50%" class="overviewColorLightBlue">
						<l:VerticalLayout>
							<core:Icon src="sap-icon://activate" size="2.5rem"
									   color="rgba(66,124,172,0.8)" class="sapUiTinyMarginBottom"/>
							<Title text="{i18n>OVERVIEW_LANDSCAPE_WIZARD}" level="H2"
								   titleStyle="H2" class="sapUiTinyMarginBottom" />
							<Text text="{i18n>OVERVIEW_WIZARD_TEXT}" class="sapUiTinyMarginBottom" />
							<Link text="{i18n>OVERVIEW_WIZARD_LINK}"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell width="50%" class="overviewColorBlue">
						<l:VerticalLayout>
							<core:Icon src="sap-icon://overview-chart" size="2.5rem"
									   color="rgba(66,124,172,0.8)" class="sapUiTinyMarginBottom"/>
							<Title text="{i18n>GO_TO_TL}" level="H2"
								   titleStyle="H2" class="sapUiTinyMarginBottom" />
							<Text text="{i18n>TRANSPORT_LANDSCAPE_TEXT}" class="sapUiTinyMarginBottom" />
							<Link text="{i18n>TRANSPORT_LANDSCAPE_LINK}" press="goToTransportLandscape"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
		</f:content>
	</f:DynamicPage>
</mvc:View>