<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
		  xmlns="sap.m" xmlns:commons="sap.suite.ui.commons" xmlns:l="sap.ui.layout"
		  xmlns:html="http://www.w3.org/1999/xhtml"
		  xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
		  xmlns:f="sap.f" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
		  xmlns:viz.data="sap.viz.ui5.data" xmlns:chart="sap.suite.ui.microchart"
		  controllerName="pc.my.be-fit.controller.Recipes">
	<f:DynamicPage id="overviewPage" class="overviewPage">
		<f:content>
			<l:BlockLayout class="overviewPageBlockLayout"
						   background="Transparent"
			>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell width="100%"
									   class="overviewPageBlockLayoutCell"
					>
						<Title
								level="H1" text="{i18n>RECIPES}" class="sapUiSmallMarginEnd"
						/>
						<Table id="idRecipesTable"
							   inset="false"
							   items="{
                                    path: '/RecipesCollection',
                                    sorter: {
                                        path: 'Name'
                                    }
                                }"
						>
							<headerToolbar>
								<OverflowToolbar>
									<content>
										<ToolbarSpacer/>
										<Button
												text="Add"
										/>
										<Button
												text="Remove"
										/>
									</content>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column>
									<Text
											text="Name"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Description"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Total Proteins"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Total Carbohydrates"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Total Fats"
									/>
								</Column>
								<Column
										demandPopin="true"
								>
									<Text
											text="Portions"
									/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier
												title="{Name}"
										/>
										<Text
												text="{Description}"
										/>
										<Text
												text="{TotalProtein}"
										/>
										<Text
												text="{TotalCarbohydrate}"
										/>
										<Text
												text="{TotalFat}"
										/>
										<Text
												text="{Portion}"
										/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
		</f:content>
	</f:DynamicPage>
</mvc:View>